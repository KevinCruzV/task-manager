{
  "name": "task-manager",
  "private": true,
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "dev": "yarn workspaces foreach -pt run dev",
    "test": "yarn workspaces foreach -pt run test",
    "lint": "yarn workspaces foreach -pt run lint",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:psql": "docker exec -it task_manager_db psql -U postgres -d task_manager",
    "db:reset": "prisma migrate reset --schema backend/prisma/schema.prisma"
  }
}